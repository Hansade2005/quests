{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ".nvmrc",
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": ["*.jsonc"],
      "options": {
        "trailingComma": "none"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-curly",
    "prettier-plugin-sh",
    "prettier-plugin-sql"
  ]
}
